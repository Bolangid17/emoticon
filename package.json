{
  "name": "emoticon",
  "version": "3.2.0",
  "description": "Info on ASCII emoticons",
  "license": "MIT",
  "keywords": [
    "emoticon",
    "unicode",
    "name",
    "shortcode",
    "tag",
    "alias",
    "name"
  ],
  "repository": "wooorm/emoticon",
  "bugs": "https://github.com/wooorm/emoticon/issues",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/wooorm"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "main": "index.json",
  "files": [
    "index.json"
  ],
  "devDependencies": {
    "browserify": "^17.0.0",
    "gemoji": "^6.0.0",
    "markdown-table": "^2.0.0",
    "prettier": "^2.0.0",
    "remark-cli": "^9.0.0",
    "remark-preset-wooorm": "^8.0.0",
    "tape": "^5.0.0",
    "tinyify": "^3.0.0",
    "xo": "^0.37.0"
  },
  "scripts": {
    "generate": "node script/build-data",
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix",
    "build-support": "node script/build-support",
    "build-bundle": "browserify index.json -s emoticon -o emoticon.js",
    "build-mangle": "browserify index.json -s emoticon -o emoticon.min.js -p tinyify",
    "build": "npm run build-support && npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test": "npm run generate && npm run format && npm run build && npm run test-api"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "unicorn/no-array-callback-reference": "off"
    },
    "ignore": [
      "emotion.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm",
      [
        "gfm",
        {
          "tablePipeAlign": false
        }
      ],
      [
        "lint-table-pipe-alignment",
        false
      ]
    ]
  }
}
